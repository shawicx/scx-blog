---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const allContent = await getCollection('blog');
  return allContent.map((doc) => ({
    params: { slug: doc.slug },
    props: { doc },
  }));
}

const { doc } = Astro.props;
const { Content } = await doc.render();
---

<BaseLayout title={doc.data.title} description={doc.data.description}>
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{doc.data.title}</h1>
      {doc.data.description && <p class="post-description">{doc.data.description}</p>}
      {doc.data.date && <time class="post-date">{doc.data.date.toLocaleDateString('en-US')}</time>}
      {doc.data.author && <p class="post-author">By {doc.data.author}</p>}
      {doc.data.tags && doc.data.tags.length > 0 && (
        <div class="post-tags">
          {doc.data.tags.map(tag => <span class="tag">{tag}</span>)}
        </div>
      )}
    </header>
    <div class="post-content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .post-header {
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .post-title {
    margin-top: 0;
    font-size: 2rem;
    color: #333;
  }
  
  .post-description {
    font-size: 1.2rem;
    color: #666;
    font-style: italic;
  }
  
  .post-date, .post-author {
    color: #888;
    font-size: 0.9rem;
  }
  
  .post-tags {
    margin-top: 1rem;
  }
  
  .tag {
    display: inline-block;
    background: #f0f0f0;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    margin-right: 0.5rem;
    font-size: 0.8rem;
    color: #555;
  }
  
  .post-content {
    line-height: 1.6;
  }
  
  .post-content h1, .post-content h2, .post-content h3 {
    margin-top: 1.5em;
  }
  
  .post-content img {
    max-width: 100%;
  }
</style>