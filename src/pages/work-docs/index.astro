---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Work Docs" description="工作记录">
  <div class="page-content">

    <div class="category-grid">
      <section class="category-section">
        <h2>ViewShine</h2>
        <ul class="post-list">
          <li><a href="/work-docs/viewshine/bi-map">Bi Map</a></li>
          <li><a href="/work-docs/viewshine/formatter">Formatter</a></li>
          <li><a href="/work-docs/viewshine/vue3-api">Vue3 API</a></li>
        </ul>
      </section>

      <section class="category-section">
        <h2>UniUbi</h2>
        <ul class="post-list">
          <li><a href="/work-docs/uniubi/cancel-request">Cancel Request</a></li>
          <li><a href="/work-docs/uniubi/encapsulated-axios">Encapsulated Axios</a></li>
          <li><a href="/work-docs/uniubi/mini-bluetooth">Mini Bluetooth</a></li>
          <li><a href="/work-docs/uniubi/TPLink">TPLink</a></li>
          <li><a href="/work-docs/uniubi/video-monitoring">Video Monitoring</a></li>
          <li><a href="/work-docs/uniubi/voice-speech">Voice Speech</a></li>
        </ul>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .page-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .category-section h2 {
    border-bottom: 1px solid #eaeaea;
    padding-bottom: 0.5rem;
    margin-top: 0;
  }

  .post-list {
    list-style: none;
    padding: 0;
  }

  .post-list li {
    padding: 0.25rem 0;
  }

  .post-list a {
    text-decoration: none;
    color: #3eaf7c;
    font-size: 1.1rem;
  }

  .post-list a:hover {
    text-decoration: underline;
  }
</style>
