---
import Card from '@/components/Card.astro'
import Layout from '@/layouts/Layout.astro'

interface HomeCard {
  title: string
  description: string
  href: string
  target: '_blank' | '_self'
  external: boolean
  icon: string
  variant: 'default' | 'featured' | 'compact'
}

// 首页卡片数据
const homeCards: HomeCard[] = [
  {
    title: '个人博客',
    description: '技术文章、学习心得与工作经验分享',
    href: 'https://scx-core.vercel.app/',
    target: '_blank',
    external: true,
    icon: '',
    variant: 'featured',
  },
  {
    title: '翻译工具',
    description: '便捷的在线翻译助手，支持多语言互译',
    href: 'https://cis-translate.vercel.app/',
    target: '_blank',
    external: true,
    icon: '',
    variant: 'default',
  },
  {
    title: 'API工具',
    description: '开发者友好的API测试与管理工具',
    href: 'https://scx-api-tool.netlify.app/',
    target: '_blank',
    external: true,
    icon: '',
    variant: 'default',
  },
  {
    title: 'GitHub仓库',
    description: '查看开源项目与代码实现',
    href: 'https://github.com/shawicx/scx-void',
    target: '_blank',
    external: true,
    icon: '',
    variant: 'default',
  },
  {
    title: '技术文档',
    description: '浏览所有技术文档与学习笔记',
    href: '/posts/',
    icon: '',
    target: '_self',
    external: false,
    variant: 'default',
  },
  {
    title: '关于我',
    description: '了解更多关于我的信息',
    href: '/about/',
    icon: '',
    target: '_self',
    external: false,
    variant: 'default',
  },
]
---

<Layout>
  <!-- Hero Section -->
  <section class="mb-12">
    <h1 class="mb-4 text-4xl c-primary font-bold">shawicx</h1>
    <p class="text-lg c-secondary leading-relaxed">
      工作、学习文档，以及一些有趣的项目。
      探索技术、分享经验、创造价值。
    </p>
  </section>

  <!-- Projects Section -->
  <section class="mb-12">
    <h2 class="mb-6 text-2xl c-primary font-semibold">我的项目</h2>
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      {homeCards.map(card => (
        <Card
          title={card.title}
          description={card.description}
          href={card.href}
          target={card.target}
          variant={card.variant}
          icon={card.icon}
          external={card.external}
        />
      ))}
    </div>
  </section>

</Layout>
