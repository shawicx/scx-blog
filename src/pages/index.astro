---
import BaseLayout from '../layouts/BaseLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'SCX Blog - Home', description = 'Welcome to SCX Blog - Work, Study Documents' } = Astro.props;
---

<div class="hero">
  <h1>shawicx</h1>
  <p class="tagline">工作学习文档</p>
  <p class="subtitle">知识是一片荒原</p>

  <div class="actions">
    <a class="action primary" href="/work-docs">工作记录</a>
    <a class="action secondary" href="/scattered-notes">学习笔记</a>
  </div>
</div>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
  }

  .tagline {
    font-size: 1.5rem;
    margin: 0.5rem 0;
    color: #666;
  }

  .subtitle {
    font-size: 1.2rem;
    margin: 1rem 0;
    color: #888;
  }

  .actions {
    margin-top: 2rem;
  }

  .action {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    margin: 0 0.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
  }

  .action.primary {
    background-color: #3eaf7c;
    color: white;
  }

  .action.secondary {
    background-color: #476582;
    color: white;
  }
</style>
