---
export interface Props {
  title?: string;
  description?: string;
}

const { title = 'Default Title', description = 'Default Description' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      margin: 0;
      padding: 0;
      line-height: 1.5;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }

    header {
      border-bottom: 1px solid #eaeaea;
      padding-bottom: 1rem;
      margin-bottom: 2rem;
    }

    nav ul {
      display: flex;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    nav li {
      margin-right: 1.5rem;
    }

    footer {
      border-top: 1px solid #eaeaea;
      padding-top: 1rem;
      margin-top: 2rem;
      text-align: center;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1><a href="/">SCX Blog</a></h1>
      <nav>
        <ul>
          <li><a href="/">首页</a></li>
          <li><a href="/work-docs">工作记录</a></li>
          <li><a href="/scattered-notes">学习笔记</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>&copy; 2025 SCX Blog. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>
